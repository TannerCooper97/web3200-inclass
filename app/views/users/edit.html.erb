<%= form_with(model: @user, url: user_path(@user), method: :patch, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="d-flex justify-content-center align-items-center flex-column mt-5 mb-5">
<h2>Editing user: <%= @user.id %></h2>

<div class="mt-3 mb-5">
  <div class="field mb-2">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :admin %>
    <%= form.check_box :admin %>
  </div>
</div>

 <div class="d-flex mb-4">
    <div class="actions">
        <%= form.submit 'Update', class:'mx-1 btn btn-primary mb-2' %>
    </div>
    <div>
        <%= link_to "Back to Users", users_path, class:'btn btn-primary mb-2' %>
    </div>
</div>
</div>
<% end %>